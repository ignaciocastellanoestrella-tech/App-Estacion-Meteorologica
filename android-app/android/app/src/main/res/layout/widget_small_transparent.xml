<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_bg_transparent"
        android:padding="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/w_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"
            android:text="--:--"
            android:layout_marginBottom="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <ImageView
            android:id="@+id/w_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_sunny"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/w_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="--°"
            android:layout_marginBottom="2dp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <TextView
            android:id="@+id/w_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#CCFFFFFF"
            android:text="Estación"
            android:maxLines="1"
            android:ellipsize="end"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <TextView
            android:id="@+id/w_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#B3FFFFFF"
            android:text="Act. --:--"
            android:layout_marginTop="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

    <ImageView
        android:id="@+id/w_refresh"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="top|end"
        android:layout_margin="6dp"
        android:alpha="0.75"
        android:src="@drawable/ic_refresh_widget"
        android:contentDescription="Refrescar" />

</FrameLayout>
